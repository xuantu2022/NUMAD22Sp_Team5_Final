<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PhotoActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:id="@+id/bar">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            android:id="@+id/toolbar"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_close"
                    android:id="@+id/close"/>

                <TextView
                    android:id="@+id/post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:text="POST"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp" />




            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/image_added"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Description"
            android:maxLines="5"
            android:id= "@+id/description"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Tag:First Time For"
            android:maxLines="5"
            android:id= "@+id/tag"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/swim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#C5BEBE"
                android:onClick="tagButton"
                android:text="swim" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#C5BEBE"
                android:id="@+id/walk"
                android:text="walk"
                android:layout_toRightOf="@+id/swim"
                android:layout_marginStart="5dp"
                android:onClick="tagButton"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#C5BEBE"
                android:id="@+id/medicine"
                android:text="Take Medicine"
                android:layout_toRightOf="@+id/walk"
                android:layout_marginStart="5dp"
                android:onClick="tagButton"/>

            <Button
                android:id="@+id/smile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/swim"
                android:backgroundTint="#C5BEBE"
                android:onClick="tagButton"
                android:text="Smile" />
            <Button
                android:id="@+id/flight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/smile"
                android:layout_below="@+id/swim"
                android:backgroundTint="#C5BEBE"
                android:onClick="tagButton"
                android:layout_marginStart="5dp"
                android:text="Flight" />
            <Button
                android:id="@+id/shower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/flight"
                android:layout_below="@+id/swim"
                android:backgroundTint="#C5BEBE"
                android:onClick="tagButton"
                android:layout_marginStart="5dp"
                android:text="Shower" />
            <Button
                android:id="@+id/nail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/shower"
                android:layout_below="@+id/swim"
                android:backgroundTint="#C5BEBE"
                android:onClick="tagButton"
                android:layout_marginStart="5dp"
                android:text="Clip Nail" />
            <Button
                android:id="@+id/ice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/smile"
                android:backgroundTint="#C5BEBE"
                android:onClick="tagButton"
                android:text="Ice Cream" />




        </RelativeLayout>



    </LinearLayout>


</LinearLayout>

